@article{Griffiths1992,
abstract = {An understanding of the concepts of atom and molecule is fundamental to the learning of chemistry. Any misconceptions and alternative conceptions that students harbor about these concepts will impede further learning. This article identifies misconceptions related to the fundamental characteristics of atoms and molecules which Grade‐12 students hold. Data were obtained by administration of semistructured interviews to a stratified, random sample of 30 students of differing abilities and backgrounds in science. Fifty‐two misconceptions were observed and are reported. These are grouped into 11 categories. Six relate to the structure, composition, size, shape, weight, bonding, and energy of molecules; five relate to the structure, shape, size, weight, and animistic perceptions of atoms. Some of the misconceptions identified parallel the historical development of scientific concepts. Copyright {\textcopyright} 1992 Wiley Periodicals, Inc., A Wiley Company},
author = {Griffiths, Alan K. and Preston, Kirk R.},
doi = {10.1002/tea.3660290609},
file = {:Users/remimetzdorff/Documents/biblio/articles/ark {\_}67375{\_}WNG-ZKDDV8QQ-T.pdf:pdf},
issn = {10982736},
journal = {Journal of Research in Science Teaching},
keywords = {franklin,suivi stage},
mendeley-tags = {suivi stage,franklin},
number = {6},
pages = {611--628},
title = {{Grade‐12 students' misconceptions relating to fundamental characteristics of atoms and molecules}},
volume = {29},
year = {1992}
}
